{
  "name": "qa-testcase-generator",
  "version": "1.0.0",
  "description": "Interface web et extension Chrome pour générer des test cases QA via n8n",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:extension": "vite build --watch --config vite.config.extension.js",
    "build": "npm run build:web",
    "build:web": "vite build",
    "build:extension": "vite build --config vite.config.extension.js",
    "build:all": "npm run build:web && npm run build:extension",
    "preview": "vite preview"
  },
  "devDependencies": {
    "vite": "^5.4.0"
  },
  "dependencies": {
    "alpinejs": "^3.15.8"
  }
}
